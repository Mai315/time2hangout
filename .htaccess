# NOTE: This file is for Apache servers only
# For GitHub Pages, use 404.html instead (which is already configured)
# You can delete this file if you're only using GitHub Pages

# Enable Rewrite Engine
RewriteEngine On

# Case-insensitive URL handling
# Redirect uppercase/mixed case URLs to lowercase

# Handle /Junior (with or without trailing slash) -> /junior/
RewriteCond %{REQUEST_URI} ^/Junior/?$ [NC]
RewriteRule ^Junior/?$ /junior/ [R=301,L]

# Handle /Junior/anything -> /junior/anything
RewriteCond %{REQUEST_URI} ^/Junior/(.*)$ [NC]
RewriteRule ^Junior/(.*)$ /junior/$1 [R=301,L]

# Handle common HTML files with uppercase (Rental, Gallery, Locate, Payment)
RewriteCond %{REQUEST_URI} ^/Rental\.html$ [NC]
RewriteRule ^Rental\.html$ /rental.html [R=301,L]

RewriteCond %{REQUEST_URI} ^/Gallery\.html$ [NC]
RewriteRule ^Gallery\.html$ /gallery.html [R=301,L]

RewriteCond %{REQUEST_URI} ^/Locate\.html$ [NC]
RewriteRule ^Locate\.html$ /locate.html [R=301,L]

RewriteCond %{REQUEST_URI} ^/Payment\.html$ [NC]
RewriteRule ^Payment\.html$ /payment.html [R=301,L]

# Prevent directory listing
Options -Indexes

# Set default index file
DirectoryIndex index.html

